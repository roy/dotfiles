# If not running interactively, don't do anything
[ -z "$PS1" ] && return

# don't put duplicate lines in the history. See bash(1) for more options
export HISTCONTROL=ignoredups
# ... and ignore same sucessive entries.
export HISTCONTROL=ignoreboth

# check the window size after each command and, if necessary,
# update the values of LINES and COLUMNS.
shopt -s checkwinsize

if [ -f /etc/bash_completion ]; then
    . /etc/bash_completion
fi

# Set PATH, CDPATH, EDITOR, etc.

export PATH="/usr/local/mysql/bin:$PATH"
export PATH="/opt/local/bin:/opt/local/sbin:/usr/local/bin:/usr/local/sbin:/bin:/sbin:/usr/bin:/usr/sbin:$PATH"
export PATH="~/bin:$PATH"
export EDITOR="vim"
export GEMEDITOR="mvim"
export MANPATH="/usr/local/man:$MANPATH"
alias fs='du -h -d 1 $1'

export DYLD_LIBRARY_PATH=/usr/local/opt/instantclient      # Oracle instant Client
export ORACLE_HOME=/usr/local/opt/instantclient
export PATH=$PATH:$ORACLE_HOME
export TNS_ADMIN=$ORACLE_HOME/network/admin
export SQLPATH=$ORACLE_HOME
export ORACLE_SID=asdb
